
#include <iostream>
#include <cctype>
#include<iomanip>
double FtoC(double F);
double FtoK(double F);
double CtoF(double C);
double CtoK(double C);
double KtoC(double K);
double KtoF(double K);

using namespace std;

int main()
{   
    
    double temp;
    char old_unit;
    
    cout << "Enter the temperature followed by its unit (F, C, or K ) : ";
    cin >> temp >> old_unit;
    
    char new_unit;
    cout << "Enter the new unit (F, C, or K ): ";
    cin >> new_unit;
    
    
    old_unit = toupper(old_unit);
    new_unit = toupper(new_unit);
    double new_temp;
    
    if (old_unit == 'F')
    {
        if (new_unit == 'C')
            new_temp = FtoC(temp);
        else if (new_unit == 'K')
            new_temp = FtoK(temp);
        else
            new_temp = temp;
    }
    else if (old_unit == 'C')
    {
        if (new_unit == 'F')
            new_temp = CtoF(temp);
        else if (new_unit == 'K')
            new_temp = CtoK(temp);
        else
            new_temp = temp;
    }
    else
    {
        if (new_unit == 'F')
            new_temp = KtoF(temp);
        else if (new_unit == 'C')
            new_temp = KtoC(temp);
        else
            new_temp = temp;
    }
    cout << fixed << setprecision(2);
    cout << temp << " " << old_unit << " is " << new_temp << " " << new_unit << endl;

    return 0;
}


double FtoC(double F)
{
    return (F - 32) * 5 / 9;
}
double FtoK(double F)
{
    return (5 * (F - 32) / 9) + 273.15;
}

double CtoF(double C)
{
    return (9 * C / 5) + 32;
}

double CtoK(double C)
{
    return C + 273.15;
}

double KtoC(double K)
{
    return K - 273.15;
}
double KtoF(double K)
{
    return (9 * (K - 273.15) / 5) + 32;
}
